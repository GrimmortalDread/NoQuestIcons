<Project Sdk="Dalamud.NET.Sdk/13.1.0">
	<PropertyGroup>
		<TargetFramework>net9.0-windows</TargetFramework>
		<Platforms>x64</Platforms>

		<!-- Make CI happy; we point the SDK at the dev hooks location explicitly in the workflow -->
		<DalamudSkipCopy>true</DalamudSkipCopy>
		<DalamudLibPath>$(HOME)/.xlcore/dalamud/Hooks/dev</DalamudLibPath>

		<!-- Default version; workflow will override with tag -->
		<Version Condition="'$(Version)' == ''">1.2.2</Version>

		<!-- Tell DalamudPackager where the manifest is -->
		<DalamudPluginManifest>$(MSBuildProjectDirectory)/NoQuestIcons.json</DalamudPluginManifest>
	</PropertyGroup>
</Project>
