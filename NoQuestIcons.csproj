<Project Sdk="Dalamud.NET.Sdk/13.1.0">
	<PropertyGroup>
		<TargetFramework>net9.0-windows</TargetFramework>
		<Platforms>x64</Platforms>

		<!-- CI-friendly: we install dev hooks at $HOME/.xlcore/... in the workflow -->
		<DalamudSkipCopy>true</DalamudSkipCopy>
		<DalamudLibPath>$(HOME)/.xlcore/dalamud/Hooks/dev</DalamudLibPath>

		<!-- Local default; the workflow overrides this with the tag's version -->
		<Version Condition="'$(Version)' == ''">1.2.2</Version>
	</PropertyGroup>
</Project>
