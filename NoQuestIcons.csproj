<Project Sdk="Dalamud.NET.Sdk/13.1.0">
  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Platforms>x64</Platforms>

    <!-- Make CI happy; we point the SDK at the dev hooks location explicitly in the workflow -->
    <DalamudSkipCopy>true</DalamudSkipCopy>
    <DalamudLibPath>$(HOME)/.xlcore/dalamud/Hooks/dev</DalamudLibPath>

    <!-- Default version; workflow will override with tag (e.g., 1.2.9) -->
    <Version Condition="'$(Version)' == ''">1.2.2</Version>
  </PropertyGroup>
</Project>
